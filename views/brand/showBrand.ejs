
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Brand</title>
  </head>
  <body class="bg-info">
 

     
    <div style="text-align: right;" class="mt-4" > <a  href="/getBrandPage" class="btn btn-success ">add brand</a></div>
  
   
   

   <div class="container grid-margin stretch-card">
   
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">Brand</h4>
       
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">S.no</th>
                <th scope="col">Brand name</th>
                <th scope="col">image</th>           
                <th scope="col">status</th>
               
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% brand.forEach((element,index)=>{%>
                <tr>
                  
                    <td><%= index+1 %></td>
                    <td><%= element.name %></td>
                   
                    
                    <td><img style="height: 50px; width: 50px;" src="/userimage/<%= element.image %>"> </td>
                  
                      
                        <!-- add status --> 
                          <% if(element.status==1){ %>                               
                           
                        <td><span class="badge bg-label-success text-success me-1">Active</span></td>
                          <% } else { %> 
                          <td><span class="badge bg-label-danger text-danger me-1">Inactive</span></td>            
                          <% } %> 
                                
                        <td>
                            <a class="btn btn-primary" href="/updateBrand?brandId=<%= element.id %>" >update</a>
                            <a class="btn btn-danger" href="/deleteBrand?brandId=<%= element.id %>" >delete</a>
                            
                          
                              <!-- status change -->
                              <% if(element.status==1){ %>                               
                                <a class="btn btn-danger" onclick="return confirm('Are you sure you want to inactive?');" href="/brandStatus?brandId=<%= element.id%>&status=active" >Inactive</a>
                                  <% } else { %> 
                                  <a class="btn btn-success" onclick="return confirm('Are you sure you want to Active?');" href="/brandStatus?brandId=<%= element.id%>status=inactive" >Active</a>
                                  
                                  <% } %> 
                        </td>
                      </tr>
                      <%  }) %>
                  
        
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

 
 
  </body>
</html>