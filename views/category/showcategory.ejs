
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Category</title>
    <%-include("../plugin")%>
  </head>
  <body class="bg-info">
    <%- include("../layout/navbar")%>
    <div class="container-fluid page-body-wrapper">
      <%-include("../layout/settingpanel") %>
       <!-- partial -->
       <%- include("../layout/sidebar") %>
       
     
          
    
   
      
      
   <div class="container mt-4 ">
    <div class="container text-center"><h3 id="showCategoryMessage"><%=message%></h3></div>

    <div class="container mt-3  row" > 
      <h3 class="p-2" style="text-align: left;" >category
    
    </h3>
    <a  href="/getCategory" class="btn btn-success mb-2 text-right ">add category</a>
    </div>
    <div class="container grid-margin stretch-card ">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title">show category</h4>
       
        <div class="table-responsive">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">S.no</th>
                <th scope="col">sequence</th>
                <th scope="col">Name</th>           
                <th scope="col">image</th>
                <th scope="col">banner</th>
                <th scope="col">status</th>
                <th scope="col">Action</th>
              </tr>
            </thead>
            <tbody>
              <% category.forEach((element,index)=>{%>
                <tr>
                  
                    <td><%= index+1 %></td>
                    <td><%= element.sequence %></td>
                    <td><%= element.name %></td>
                    
                    <td><img style="height: 50px; width: 50px;" src="/userimage/<%= element.image %>"> </td>
                    <td><img style="height: 50px; width: 50px;" src="/userimage/<%= element.banner %>"> </td>
                      
                        <!-- add status --> 
                          <% if(element.status==1){ %>                               
                           
                        <td><span class="badge bg-label-success text-success me-1">Active</span></td>
                          <% } else { %> 
                          <td><span class="badge bg-label-danger text-danger me-1">Inactive</span></td>            
                          <% } %> 
                                
                        <td>
                            <a class="btn btn-primary" href="/updateCategory?categoryId=<%= element.id %>" >update</a>
                            <button class="btn btn-danger deleteCategory" value="<%= element.id %>"  >delete</button>
                         
                          
                              <!-- status change -->
                              <% if(element.status==1){ %>                               
                                <button class="btn btn-danger categoryStatusInactive" value="<%= element.id %>" id="categoryStatus" onclick="swalFunction(`Inactive`)"  >Inactive</button>
                              
                                <% } else { %> 
                                  <button class="btn btn-success categoryStatusActive" value="<%= element.id %>" id="categoryStatus" onclick="swalFunction(`Active`)" >Active</button>
                                  
                                  <% } %> 
                        </td>
                      </tr>
                      <%  }) %>
                  
        
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
 
  </div>
   </div>
  
   <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.1/jquery.min.js"></script>
  <script src="/js/CategoryAjax.js"></script>

  <%-include("../layout/footer")%>
  
