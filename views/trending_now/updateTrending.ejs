
<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">

    <title>Trending</title>
    <script src="https://unpkg.com/sweetalert/dist/sweetalert.min.js"></script>
    <%-include("../plugin")%>
  </head>
  <body >
    <%- include("../layout/navbar")%>
    <div class="container-fluid page-body-wrapper">
      <%-include("../layout/settingpanel") %>
       <!-- partial -->
       <%- include("../layout/sidebar") %>

         <%if(typeof message!== undefined){%>
        
        <script>
          swal ( "Oops" ,  `${message}` ,  "error" )
        </script>
         <%}%>

       <div class="container  bg-light p-2 mt-4 grid-margin stretch-card ">
       
         
        <div class=" grid-margin stretch-card col-md-12">
            <div class="card">
              <div class="card-body">
                <h4 class="card-title">Trending update form</h4>
                <p class="card-description">
                  Trending update form layout
                </p>
                <form class="forms-sample" action="trendingUpdateData" method="post"  >
                    <input type="hidden" value="<%=trendingUpdate.id%>" name="trendingId">
                    <div class="form-group">
                        <label for="exampleInputPassword1">Category</label>
                   
                        <div class="input-group">
                            <div class="input-group-prepend">
                              <label class="input-group-text" for="inputGroupSelect01">Category</label>
                            </div>
                            <select name="category" class="custom-select form-control" id="inputGroupSelect01">
                              <option selected>select category...</option>
                              <% category.forEach((element)=>{%>
                                <option value="<%=element.id%>" <%= (trendingUpdate.id==element.id)?"selected":"" %> ><%=element.name%></option>
                                <%})%>                   
                              </select>               
                          </div>
                      </div> 

                  <div class="form-group">
                    <label for="exampleInputPassword1">Status</label>
    
                    <div class="input-group mb-3">
                        <div class="input-group-prepend">
                          <label class="input-group-text" for="inputGroupSelect01">Status</label>
                        </div>
                        <select name="status" class="custom-select form-control" id="inputGroupSelect01">
                          <option selected>select status...</option>
                          <option value="1" <%= (trendingUpdate==1)?"select":"" %> >Active</option>
                          <option value="0" <%= (trendingUpdate==0)?"select":"" %> >Inactive</option>
                         
                        </select>
            
                      </div>
                  </div>         
                 
                  <button type="submit" class="btn btn-primary mr-2">Submit</button>
                   <a href="/getShowTrendingPage" class="btn btn-primary" >Back</a>
                 
                </form>
              </div>
            </div>
          </div>

  
      </div>
     
      </div>
   
     
    <%-include("../layout/footer")%>
  </body>
</html>